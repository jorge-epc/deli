extends layout

block content
  .inner
    form.form(action="/account" method="POST")
      h2 Edit account
      label(for="name") Name
      input(type="text" name="name" required value=user.name)
      label(for="email") Email
      input(type="email" name="email" required value=user.email)
      input.button(type="submit" value="Edit")
